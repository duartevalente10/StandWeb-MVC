@model StandWeb.Models.Reviews

    @{ ViewData["Title"] = "Edit"; }


    @if (User.IsInRole("Gestor")) {
    <h1>Edit</h1>
     <h4>Reviews</h4>
     <hr />
     <div class="row">
         <div class="col-md-4">
             <form asp-action="Edit">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group form-check">
                     <label class="form-check-label">
                         <input class="form-check-input" asp-for="Visibilidade" /> @Html.DisplayNameFor(model => model.Visibilidade)
                     </label>
                 </div>
                 <div hidden>
                     <input type="hidden" asp-for="IdReview" />
                     <div class="form-group">
                         <label asp-for="Comentario" class="control-label"></label>
                         <input asp-for="Comentario" class="form-control" />
                         <span asp-validation-for="Comentario" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Pontuacao" class="control-label"></label>
                         <input asp-for="Pontuacao" class="form-control" />
                         <span asp-validation-for="Pontuacao" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="Data" class="control-label"></label>
                         <input asp-for="Data" class="form-control" />
                         <span asp-validation-for="Data" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="UtilizadoresFK" class="control-label"></label>
                         <select asp-for="UtilizadoresFK" class="form-control" asp-items="ViewBag.UtilizadoresFK"></select>
                         <span asp-validation-for="UtilizadoresFK" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                         <label asp-for="CarrosFK" class="control-label"></label>
                         <select asp-for="CarrosFK" class="form-control" asp-items="ViewBag.CarrosFK"></select>
                         <span asp-validation-for="CarrosFK" class="text-danger"></span>
                     </div>

                 </div>


                 <div class="form-group">
                     <input type="submit" value="Save" class="btn btn-primary" />
                 </div>
             </form>
         </div>
     </div>

     <div>
         <a asp-action="Index">Back to List</a>
     </div> } else {
                <h1>Página restrita ao Gestor</h1>
            }

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
